<!-- header -->
<header></header>

<h2>Sign up</h2>

<!-- form_with -->
<div class="form-body">
 <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
 <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group has-icon">
     <div class= form_icon><label class="control-label sr-only" for="inputName">Name</label></div>
     <%= f.text_field :name,autofocus: true, classs:"form-control", id:"inputName" %>
     <span class="fa fausee form-control-icon" aria-hidden="true"></span></div>
  </div>

  <div class="form-group has-icon">
     <div class= form_icon><label class="control-label sr-only" for="inputEmail">Email</label></div>
     <%= f.email_field :email, class:"form-control", id:"inputEmail" %>
     <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
  </div>


  <div class="form-group has-icon">
     <div class= form_icon><label class="control-label sr-only" for="inputPassword">Password</label></div>
          <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword" %>
    <span class="fa fa-lock form-control-icon" aria-hidden="true"></span>
  </div>

  <div class="form-group has-icon">
    <div class= form_icon><label class="control-label sr-only" for="inputConfirmPassword">Password</label></div>
      <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword" %>
      <span class="fa fa-check-circle-o form-control-icon" aria-hidden="true"></span>
  </div>

   <div class="actions">
    <%= f.submit "Sign up", class:"-base-1 mt-20" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>

<!-- footer -->

<main>
<div class="container">

<!-- books -->
 <div class="row">
    <div class="col-xs-3">
     <%= render 'users/list', user: current_user, book: @book_new %>
    </div>
      <div class="col-xs-9">
       <div class="books">
         <h2>Books</h2>
            <table class="table" >
              <thead>
                <tr>
                 <th></th>
                 <th>Title</th>
                 <th>opinion</th>
               </tr>
              </thead>
              <tbody>
              <% @books.each do |book| %>
                <tr>
                 <td><%=link_to attachment_image_tag(book.user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg"), user_path(book.user.id) %></td>
                 <td><%= link_to book.title, book_path(book) %></td>
                 <td><%= book.body %></td>
                </tr>
                <tr>
                  <td>
                  <ul>
                    <li>By
                      <%= book.user.name %>
                    </li>
                     <div id="favorites_buttons_<%= book.id %>">
                         <%= render partial: 'favorites/favorite', locals: { book: book} %>
                     </div>
                    
                  </ul>
               <% end %>
               </td>
               </tr>
               </tbody>
               </table>
        </div>
      </div>
   </div>
</main>




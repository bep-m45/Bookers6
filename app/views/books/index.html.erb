    <!-- main -->
   <div class="contents">

    <!-- user info -->

    <div class="user">
      <div class="user-headline">
        <h2>User info</h2>
       <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
       <h3 class="profile-name"><%= @user.name %></h3>
       <h3 class="profile-introduction"><%= @user.introduction %></h3>
       <% if @user.id == current_user.id %>
       <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
       <% end %>
      </div>
    </div>

<!-- books -->

<div class="book">
  <h2>Books</h2>
<table width: "100%" >
  <tr>
    <th width: "40px"></th>
    <th width: "40px">Title</th>
    <th width: "50px">opinion</th>
  </tr>
  <% @books.each do |book| %>
 <tr>
  <td><%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
 </tr>
</table>
</div>
</div>
<% end %>
<!-- new books -->

<div class="new-book">
<h2>New book</h2>

<!-- form_with -->

  <%= form_for(@book) do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>

</div>
</div>
  <% flash.each do |message_type, message| %>
  <%= message %>
  <% end %>

  <!-- main -->

<div class="contents">

    <!-- user info -->

  <div class="user">
    <div class="user-headline">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
          <h3 class="profile-name">neme　　　<%= @user.name %></h3>
          <h3 class="profile-introduction">introduction</h3>
          <p><%= @user.introduction %></p>
          <% if @user.id == current_user.id %>
          <p><%= link_to "プロフィール編集", edit_user_path(@user.id), class: "pull-right" %></p>
        <% end %>
    </div>
  </div>

 <!-- books -->

   <div class="book">
    <h2>Books</h2>
      <table width:>
       <tr>
        <th width "40px"></th>
        <th width "40px">Title</th>
        <th width "50px">opinion</th>
      </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %> </td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= link_to book.body, book_path(book) %></td>
      </tr>
    <% end %>
     </table>
   </div>
</div>

<!-- new books -->

  <div class="new-book">
    <h2>New book</h2>


  <% if @book.errors.any? %>
    <h5><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h5>
    <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    </div>
  <% end %>
    <!-- form_with -->

  <%= form_for(@book) do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>
</div>
  <% flash.each do |message_type, message| %>
  <%= message %>
  <% end %>
    
  <!-- main -->
  
<div class="contents">
    
    <!-- user info -->
    
  <div class="user">
    <div class="user-headline">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %> 
          <h3 class="profile-name">neme　　　<%= @user.name %></h3>
          <h3 class="profile-introduction">introduction</h3>
          <p><%= @user.introduction %></p>
          <% if @user.id == current_user.id %>
          <p><%= link_to "プロフィール編集", edit_user_path(@user.id), class: "pull-right" %></p>
        <% end %>
    </div>
  </div>
    
 <!-- books -->
 
   <div class="book">
    <h2>Books</h2>
      <table width:>
       <tr>
        <th width "40px"></th>
        <th width "40px">Title</th>
        <th width "50px">opinion</th>
      </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag @user, :image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %> </td>
        <td><%= link_to book.title, book_path(@book.id) %></td>
        <td><%= link_to book.body, book_path(@book.id) %></td>
      </tr>
    <% end %>
     </table>
   </div>
</div>

<!-- new books -->

  <div class="new-book">
    <h2>New book</h2>

<!-- form_with -->

    <%= form_with model:@book, local:true do|f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
    <% end %>
  </div>
</div>